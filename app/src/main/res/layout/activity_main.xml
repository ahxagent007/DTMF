<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorBG"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="DTMF App"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/IV_menu"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/menu_icon"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_gravity="center"
            android:onClick="showPopup"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="SMS OPTION"
                    android:textSize="25dp"
                    android:textColor="#E3F2FD"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:background="@color/colorBG"
                    android:orientation="vertical"
                    android:weightSum="2"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp">

                        <HorizontalScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fillViewport="true"
                            android:measureAllChildren="false"
                            android:scrollbars="none"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_lock"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/btn_pressed"
                                    android:text="Lock"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:onClick="btnSendMessage"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="Unlock"
                                    android:textSize="20dp"
                                    android:textStyle="bold"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="FIND"
                                    android:textSize="20dp"
                                    android:textStyle="bold"/>

                                <Button
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/btn_pressed"
                                android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/><Button
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/btn_pressed"
                                android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/><Button
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/btn_pressed"
                                android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>


                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="5dp">

                        <HorizontalScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fillViewport="true"
                            android:measureAllChildren="false"
                            android:scrollbars="none"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/><Button
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/btn_pressed"
                                android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/><Button
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/btn_pressed"
                                android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/><Button
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/btn_pressed"
                                android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"/>


                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="CALL OPTION"
                    android:textSize="25dp"
                    android:textColor="#E3F2FD"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:background="@color/colorBG"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">
                        <HorizontalScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fillViewport="true"
                            android:measureAllChildren="false"
                            android:scrollbars="none"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_call0"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="0"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/btn_call1"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="1"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />


                                <Button
                                    android:id="@+id/btn_call2"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="2"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/btn_call3"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="3"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/btn_call4"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="4"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/btn_call5"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="5"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />


                                <Button
                                    android:id="@+id/btn_call6"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="6"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/btn_call7"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="7"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/btn_call8"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="8"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/btn_call9"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="9"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/btn_call_star"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="*"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/btn_call_hash"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    android:text="#"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />


                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">
                        <HorizontalScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:fillViewport="true"
                            android:measureAllChildren="false"
                            android:scrollbars="none"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    />

                                <Button
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    />


                                <Button
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    />

                                <Button
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    />

                                <Button
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    />

                                <Button
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    />


                                <Button
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    />

                                <Button
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/btn_pressed"
                                    android:layout_margin="10dp"
                                    />


                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>